    <div class="col-md-4 col-md-offset-4">
      <div ng-controller="CardController as card">
        <div class="header">

          <div class="add-item">
            <button class="btn btn-info-outline btn-block add-new-btn" ng-click="addCard = ! addCard">+ Card</button>

            <form ng-show="addCard" ng-submit="submit()" class="new-card-form">
              <input type="text" ng-model="number" class="form-control">
              <input type="text" ng-model="cvv" class="form-control">
              <input class="btn-block btn btn-info" type="submit" value="Save New Card">
            </form>
          </div>
        </div>
        <ul class="list-group">
          <div>
            <li ng-repeat="c in cards" class="list-group-item">
              <div class="cardheader">
                <div class="card-number">{{c.number}}</div>
                <div class="btngroup">
                  <button class="btn btn-secondary" aria-label="Toggle ngHide" ng-model="edit" ng-click="showDetails = ! showDetails">Info</button>
                  <button class="btn btn-info-outline" aria-label="Toggle ngHide" ng-model="edit" ng-click="editDetails = ! editDetails">Edit</button>
                </div>
              </div>
              <div ng-show="showDetails" class="card-details">{{c.cvv}}</div>

              <div ng-show="editDetails">
                <form ng-submit="cards.addCard()" class="new-card-form">
                  <input type="text" ng-model="card.number" class="form-control" placeholder="add card number">
                  <input type="text" ng-model="card.cvv" class="form-control" placeholder="CVV">
                  <input class="btn-block btn btn-info" type="submit" value="Save">
                </form>
              </div>
            </li>
          </div>
        </ul>
      </div>




